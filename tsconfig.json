{
    "compilerOptions": {
        "rootDir": "src",
        "declaration": true,
        "outDir": "dist",
        "module": "CommonJS",
        "target": "ESNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "composite": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/protos.d.ts",
        "dist"
    ]
}